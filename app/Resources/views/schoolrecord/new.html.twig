{% extends 'base.html.twig' %}

{% block body %}
    <h1>Schoolrecord creation</h1>

    {{ form_start(form) }}
    {#{{ form_widget(form) }}#}
    <form>
        <div class="form-group">
            {{ form_label(form.schoolName) }}
            {{ form_errors(form.schoolName) }}
            {{ form_widget(form.schoolName, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.phoneNumber) }}
            {{ form_errors(form.phoneNumber) }}
            {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.district) }}
                {{ form_errors(form.district) }}
                {{ form_widget(form.district, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.district) }}
                {{ form_errors(form.district) }}
                {{ form_widget(form.district, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Check me out
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
    </form>
    <input type="submit" value="Create"/>
    {#{{ form_end(form) }}#}

    <ul>
        <li>
            <a href="{{ path('schoolrecord_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
